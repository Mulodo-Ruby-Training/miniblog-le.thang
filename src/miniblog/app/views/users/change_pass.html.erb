<%= form_for User.new,:url => apis_user_change_password_path do |f| %>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :new_password %><br>
      <%= f.password_field :new_password %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
